# .gitattributes - GitHub Linguist Configuration
# This file controls how GitHub's Linguist categorizes files and calculates language statistics
# Rules are applied from top to bottom, with later rules taking precedence

# ================================
# Language-Specific Rules
# ================================

# HTML Files
*.html linguist-detectable=true
*.htm linguist-detectable=true
*.xhtml linguist-detectable=true

# CSS Files
*.css linguist-detectable=true
*.scss linguist-detectable=true
*.sass linguist-detectable=true
*.less linguist-detectable=true

# JavaScript Files
*.js linguist-detectable=true
*.mjs linguist-detectable=true
*.jsx linguist-detectable=true

# TypeScript Files
*.ts linguist-detectable=true
*.tsx linguist-detectable=true

# C# Files
*.cs linguist-detectable=true
*.csx linguist-detectable=true
*.cake linguist-detectable=true

# Python Files
*.py linguist-detectable=true
*.pyx linguist-detectable=true
*.pyw linguist-detectable=true

# Java Files
*.java linguist-detectable=true
*.jar linguist-detectable=false
*.class linguist-detectable=false

# C/C++ Files
*.c linguist-detectable=true
*.cpp linguist-detectable=true
*.cxx linguist-detectable=true
*.cc linguist-detectable=true
*.h linguist-detectable=true
*.hpp linguist-detectable=true
*.hxx linguist-detectable=true

# Go Files
*.go linguist-detectable=true

# Rust Files
*.rs linguist-detectable=true

# PHP Files
*.php linguist-detectable=true
